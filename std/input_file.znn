
public embed {
  #include <fstream>
  struct input_file {
    input_file(lite_str<> path) : f(path.data()) {}
    std::ifstream f;
  };
}

public extern struct input_file;

public extern input_file(string s);

public template <T>
T read(input_file mutable* f) {
  embed {
    T t;
    f->f >> t;
    return t;
  }
}

public bool operator! (input_file* f) {
  embed { return !f->f.good(); }
}

