
export embed {
  #include <fstream>
  struct input_file {
    input_file(lite_str<> path) : f(path.data()) {}
    std::ifstream f;
  };
}

export extern struct input_file;

export extern input_file(string s);

export template <T>
T read(input_file mutable* f) {
  embed {
    T t;
    f->f >> t;
    return t;
  }
}

export bool operator! (input_file* f) {
  embed { return !f->f.good(); }
}

