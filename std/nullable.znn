
public template <T>
variant nullable {
  T value;
  void null;
};

public template <T>
bool ok(nullable<T>* v) {
  switch (*v) {
    case (T* value) {
      return true;
    }
    case (null) {
      return false;
    }
  }
}

public template <T>
bool operator !(nullable<T>* v) {
  switch (*v) {
    case (T* value) {
      return false;
    }
    case (null) {
      return true;
    }
  }
}

public template <T>
T* operator *(nullable<T>* v) {
  switch (*v) {
    case (T* value) {
      return value;
    }
    case (null) {
      embed {
        struct NullAccessException {};
        throw NullAccessException{};
      }
    }
  }
}

public template <T>
nullable<T> value(mutable T v) {
  return nullable<T>::value(move(v));
}

public template <T>
nullable<T> null() {
  return nullable<T>::null();
}
