public import "concepts.znn";

public embed{
#include <cstdio>
}

public string to_string(int* i) {
  embed {
    char buf[12];
    snprintf(buf, 12, "%d", *i);
    return lite_str<>(buf);
  }
}

public string to_string(double* i) {
  embed {
    char buf[20];
    snprintf(buf, 20, "%f", *i);
    return lite_str<>(buf);
  }
}

public string to_string(string* s) {
  return *s;
}

public string to_string(bool* b) {
  if (*b)
    return "true";
  else
    return "false";
}

public template <T>
concept can_print {
  string to_string(T*);
};

public void print(string s) {
  embed {
    printf("%s\n", s.data());
  }
}
